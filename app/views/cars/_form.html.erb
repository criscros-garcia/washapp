
<div class="container" style="height:100vh">
      <div class="row">
        <div class="col-12 col-md-8 col-offset-md-2">
          <%= render 'shared/messages' %>
          <div class="card bg-light">
            <div class="card-body">
              <div class="card bg-light p-2">
              
                <div>
                  <%= form_with(model: @car, local: true) do |form| %>
                  <% if @car.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

                      <ul>
                      <% @car.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="form-group">
                    <%= form.select :size, Car.sizes.keys.map { |size| [size, size] } %>
                  </div>

                  <div class="form-group">
                    <%= form.label :brand %>
                    <%= form.text_field :brand, class:'form-control',:required => true%>
                  </div>

                  <div cclass="form-group">
                    <%= form.label :model %>
                    <%= form.text_field :model, class:'form-control', :required => true %>
                  </div>

                  <div class="form-group">
                    <%= form.label :color %>
                    <%= form.text_field :color , class:'form-control', :required => true %>
                  </div>

                  <div class="actions">
                    <%= form.submit %>
                  </div>
                  <% end %>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>